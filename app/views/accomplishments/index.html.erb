<h1>Listing accomplishments</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Reporter</th>
    <th>Receiver</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accomplishments.each do |accomplishment| %>
  <tr>
    <td><%= accomplishment.description %></td>
    <td><%= accomplishment.poster.name %></td>
    <td><%= accomplishment.receiver.name %></td>
    <td><%= link_to 'Show', accomplishment %></td>
    <td><%= link_to 'Edit', edit_accomplishment_path(accomplishment) %></td>
    <td><%= link_to 'Destroy', accomplishment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

