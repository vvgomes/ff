= form_for(@accomplishment) do |f|
  p Congratulate #{f.select :receiver_id, options_from_collection_for_select(current_user.peers, :id, :username), :include_blank => 'your peer'} for:
  = f.text_area :description, :placeholder => '... doing something awesome!', :autofocus => true
  p #{f.select :group_id, options_from_collection_for_select(Group.all, :id, :name), :include_blank => 'where?'} #{f.submit :value => 'Feedback it!'}
